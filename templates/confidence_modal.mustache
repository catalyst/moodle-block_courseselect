<div class="block_courseselect">
  <p>{{#str}}firstattempt, block_courseselect{{/str}}</p>
  <div>
    <input type="radio" id="block_courseselect-low-confidence" name="block_courseselect-confidence" value="1">
    <label for="block_courseselect-low-confidence">{{#str}}confidence:1, block_courseselect{{/str}}</label>
  </div>
  <div>
    <input type="radio" id="block_courseselect-medium-confidence" name="block_courseselect-confidence" value="2">
    <label for="block_courseselect-low-confidence">{{#str}}confidence:2, block_courseselect{{/str}}</label>
  </div>
  <div>
    <input type="radio" id="block_courseselect-high-confidence" name="block_courseselect-confidence" value="3">
    <label for="block_courseselect-low-confidence">{{#str}}confidence:3, block_courseselect{{/str}}</label>
  </div>
</div>